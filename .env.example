# Example environment configuration for cite-hustle
# Copy this file to .env and update with your values

# Email for CrossRef API (recommended but optional)
CITE_HUSTLE_CROSSREF_EMAIL= youremail

# Number of concurrent workers for API calls
CITE_HUSTLE_MAX_WORKERS=3

# Scraping settings
CITE_HUSTLE_CRAWL_DELAY=5
CITE_HUSTLE_SIMILARITY_THRESHOLD=85
CITE_HUSTLE_HEADLESS_BROWSER=true

# DuckDB settings
CITE_HUSTLE_DUCKDB_MEMORY_LIMIT=4GB
CITE_HUSTLE_DUCKDB_THREADS=4

# Optional: Override default Dropbox path
# CITE_HUSTLE_DROPBOX_BASE=/Users/yourusername/Dropbox/Github Data/cite-hustle
